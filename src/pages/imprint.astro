  <section class="py-20 md:py-32 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-8 font-headline">Imprint</h1>
      
      <div class="prose prose-lg max-w-none">
        <div class="space-y-6 text-gray-700">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Provider Identity</h2>
            <div class="space-y-3">
              <p>
                <strong>Name:</strong> Björn Gaworski-Dammann
              </p>
              <p>
