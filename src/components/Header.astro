---
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';

interface Props {
  showNav?: boolean;
}

const { showNav = true } = Astro.props;
---

<header class="sticky top-0 z-50 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
    <!-- Logo/Name -->
    <a href="/" class="flex items-center gap-3 cursor-pointer">
      <div id="logo-container">
        <Image 
          src={logo} 
          alt="Gaworski Product & Solution Design Logo" 
          width={50}
          height={50}
          class="object-contain h-[50px] w-[50px]"
        />
      </div>
      <div class="flex flex-col justify-center">
        <div class="text-2xl sm:text-3xl font-extrabold text-gray-900 font-headline leading-tight -mt-2">
          <span class="text-primary">gaworski</span>
        </div>
        <div class="text-xs sm:text-sm text-gray-500 font-normal leading-tight -mt-0.5">
          Product & Solution Design
        </div>
      </div>
    </a>
    <!-- Navigation (Simple for Solopreneur site) -->
    {showNav && (
      <>
        <nav class="space-x-8 hidden sm:flex items-center">
          <a href="#services" class="text-gray-600 hover:text-primary transition duration-150">Services</a>
          <a href="#process" class="text-gray-600 hover:text-primary transition duration-150">The Method</a>
          <a href="#about" class="text-gray-600 hover:text-primary transition duration-150">About Me</a>
          <a href="#contact" class="text-white bg-primary px-4 py-2 rounded-lg font-medium shadow-md hover:bg-primary-focus transition duration-150">Contact</a>
        </nav>
        <!-- Mobile Menu Placeholder -->
        <button class="sm:hidden text-gray-600 hover:text-primary" aria-label="Menu">
          <!-- Hamburger Icon (Simple SVG) -->
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </>
    )}
  </div>
</header>

